<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/black"
    android:layout_height="match_parent"
    tools:context=".Add_word">
    <TextView
        android:id="@+id/tv_addword_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add word"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/et_addword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_addword_title"
        android:background="@drawable/inputshapes"
        android:hint="Add word"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:paddingStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>
    <EditText
        android:id="@+id/et_addmeaning"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_addword"
        android:background="@drawable/inputshapes"
        android:layout_marginTop="10dp"
        android:hint="Meaning of word"
        android:imeOptions="actionDone"
        android:maxLines="4"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>
    <Button
        android:id="@+id/bt_add_word_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_addmeaning"
        android:layout_marginTop="40dp"
        android:text="Add"
        android:textAllCaps="false"
        android:background="@drawable/btnshapes"
        android:textColor="@android:color/white"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"/>




</RelativeLayout>